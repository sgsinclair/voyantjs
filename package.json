{
  "name": "voyant",
  "version": "1.0.7",
  "description": "Simple library for interacting with Voyant Tools",
  "main": "index.js",
  "unpkg": "index.js",
  "scripts": {
    "cm": "git-cz",
    "build": "mkdirp dist && browserify index.js -o ./dist/voyantjs.js --debug -t babelify",
    "watch": "mkdirp dist && watchify index.js -o ./dist/voyantjs.js --debug --verbose -t babelify",
    "copy": "copy .\\dist\\voyantjs.js D:\\Git\\Voyant\\src\\main\\webapp\\resources\\spyral\\voyantjs.js",
    "test": "jest",
    "report-coverage": "codecov",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgsinclair/voyantjs.git"
  },
  "keywords": [
    "voyant",
    "text"
  ],
  "contributors": [
    "St√©fan Sinclair (http://stefansinclair.name)",
    "Andrew MacDonald"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/sgsinclair/voyantjs/issues"
  },
  "homepage": "https://github.com/sgsinclair/voyantjs",
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.2",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "mkdirp": "^0.5.1",
    "semantic-release": "^15.13.24",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "highcharts": "^7.2.0"
  },
  "directories": {
    "test": "test"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "statements": 60,
        "branches": 52,
        "functions": 67,
        "lines": 59
      }
    },
    "setupFiles": [
      "./setupJest.js"
    ],
    "testMatch": [
      "**/test/*.js"
    ]
  },
  "browserify": {
		"transform": [
			[
				"babelify",
				{
					"presets": [
						"@babel/preset-env"
					],
					"plugins": [
						"@babel/plugin-proposal-class-properties"
					]
				}
			]
		]
	}
}
