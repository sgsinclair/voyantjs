{
  "name": "voyant",
  "version": "1.0.7",
  "description": "Simple library for interacting with Voyant Tools",
  "main": "index.js",
  "unpkg": "index.js",
  "scripts": {
    "cm": "git-cz",
    "build": "mkdirp dist && browserify index.js -o ./dist/voyantjs.js --debug -t babelify",
    "watch": "mkdirp dist && watchify index.js -o ./dist/voyantjs.js --debug --verbose -t babelify",
    "copy": "copy .\\dist\\voyantjs.js D:\\Git\\Voyant\\src\\main\\webapp\\resources\\spyral\\voyantjs.js",
    "test": "jest",
    "report-coverage": "codecov",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgsinclair/voyantjs.git"
  },
  "keywords": [
    "voyant",
    "text"
  ],
  "contributors": [
    "St√©fan Sinclair (http://stefansinclair.name)",
    "Andrew MacDonald (https://github.com/ajmacdonald)"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/sgsinclair/voyantjs/issues"
  },
  "homepage": "https://github.com/sgsinclair/voyantjs",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.8.7",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "codecov": "^3.6.5",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^7.19.0",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "jest-fetch-mock": "^3.0.3",
    "mkdirp": "^1.0.3",
    "semantic-release": "^17.3.7",
    "watchify": "^4.0.0"
  },
  "dependencies": {
    "highcharts": "^8.1.2",
    "lda-topic-model": "git+https://github.com/ajmacdonald/lda-topic-model.git"
  },
  "directories": {
    "test": "test"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "statements": 68,
        "branches": 54,
        "functions": 83,
        "lines": 68
      }
    },
    "setupFiles": [
      "./setupJest.js"
    ],
    "testMatch": [
      "**/test/*.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!lda-topic-model).+\\.js$"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ],
          "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-transform-runtime"
          ]
        }
      ]
    ]
  }
}
